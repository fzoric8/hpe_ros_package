<launch>

    <arg name="frequency" value="5"/>
    <arg name="video_dev" value="/dev/video0"/>
    <arg name="depth_cam" value="false"/>
    <!-- Different model loads different NN-->
    <arg name="model" value="lpn"/>    


    <group if="$(eval model == 'sb')">
        <!-- config files for each backbone model are located into experiments folder !-->
        <arg name="config_file" value="/home/developer/catkin_ws/src/hpe_ros_package/src/experiments/mpii/resnet50/384x384_d256x3_adam_lr1e-3.yaml"/>
        <arg name="model_path" value="/home/developer/catkin_ws/src/hpe_ros_package/src/models/pose_resnet_50_384x384.pth.tar"/>
        <node name="hpe_simplebaselines_node" pkg="hpe_ros_package" type="hpe_ros_sb_inf.py" args="--frequency $(arg frequency) --cfg $(arg config_file) --model-file $(arg model_path) " output="screen"/>

    </group>

    <group if="$(eval model == 'lpn')">

        <arg name="config_file" value="/home/developer/catkin_ws/src/hpe_ros_package/src/experiments/mpii/lpn/lpn50_256x256_gd256x2_gc.yaml"/>
        <arg name="model_dir" value="/home/developer/catkin_ws/src/hpe_ros_package/src/"/>
        <!-- There is some code snippet that adds models/pytorch/pose_mpii to model_dir param-->
        <arg name="model_file" value="lpn_50_256x256.pth"/>
        <node name="hpe_lpn_node" pkg="hpe_ros_package" type="hpe_ros_lpn_inf.py" args="--frequency $(arg frequency) --cfg $(arg config_file) --modelDir $(arg model_dir) --modelFile $(arg model_file) " output="screen"/>

    </group>

    <?ignore
    <!--https://github.com/ms-iot/vscode-ros/blob/master/doc/spec/debug-ros-nodes.md!--> 
    <node name="hand_pose_estimation_node" pkg="hpe_ros_package" type="hand_pose_estimation.py" args="$(arg frequency) " output="screen" />
    ?>    
    <group if="$(arg depth_cam)">
        <include file="$(find openni2_launch)/launch/openni2.launch"/>
    </group>

    <group unless="$(arg depth_cam)">

        <node name="usb_camera" pkg="usb_cam" type="usb_cam_node" launch-prefix="bash -c 'sleep 5; $0 $@'" output="screen" >
            <param name="video_device" value="$(arg video_dev)" />  
            <param name="image_width" value="640" />
            <param name="image_height" value="480" />
            <param name="pixel_format" value="yuyv" />
            <param name="camera_frame_id" value="usb_cam" />
            <param name="io_method" value="mmap"/>
        </node>

    </group>

    
</launch>

